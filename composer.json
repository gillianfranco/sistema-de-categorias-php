{
  "name": "gillian/sistema-de-categorias-php",
  "description": "Sistema de gerenciamento de categorias e produtos",
  "license": "MIT",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "authors": [
    {
      "name": "Gillian",
      "email": "gillian.melo.franco17@gmail.com"
    }
  ],
  "require": {
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.84",
    "phpunit/phpunit": "^12.2",
    "robmorgan/phinx": "^0.16.10"
  },
  "scripts": {
    "dev": [
      "@database:up",
      "@local-server"
    ],
    "local-server": "php -S localhost:8000 -t public",
    "database:up": "docker compose up -d",
    "database:down": "docker compose down",
    "phinx:create-table": "vendor/bin/phinx create",
    "phinx:migrate": "vendor/bin/phinx migrate",
    "phinx:rollback": "vendor/bin/phinx rollback"
  },
  "config": {
    "process-timeout": 0
  }
}
